    "partyIdInfo": {
    "partyIdType": "MSISDN",
    "partyIdentifier": "260795390415"
    },
    "name": "Mulenga Kapwepwe",
    "receiveCurrencies":[
    "ZMW"
    ]
    }
end note
activate S1
